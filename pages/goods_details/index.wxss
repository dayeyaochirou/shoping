/* pages/goods_details/index.wxss */
.swiper{
  width: 100%;
  height: 750rpx;
}
.swiper image{
  width: 100%;
  height: 750rpx;  
}
.price{
  margin: 20rpx;
  font-size: 20px;
  color: #ff2d4a;
}
.goods{
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding:0 20rpx;
  margin-bottom: 30rpm;
  color:#333;
  font-size: 14px;
}
.goodsright{
  width:300rpx;
  text-align: center;
  font-size: 12px;
  border-left: 1px solid #ccc;
  color: #999;
}
.goodsright .iconshoucang1{
  font-size: 20px;
}
.express{
  margin-top: 20rpx;
  padding-left: 20rpx;
  font-size: 12px;
  color: #666;
  border-bottom: 30rpx solid #eee;
}
.promotion{
  margin: 20rpx;
  font-size: 14px;
}
.promotion text{
  margin-left: 20rpx;
  color: red;
}
.footer{
  width: 100%;
  height: 120rpx;
  display: flex;
  color: #666;
  position: relative;
}
.footer .server{
  flex: 2;
  font-size: 12px;
  text-align: center;
}
.footer .server .iconfont{
  font-size: 20px;
  margin: 10rpx auto;
}
.footer .car{
  flex: 2;
  font-size: 12px;
  text-align: center;
}
.footer .car .iconfont{
  font-size: 20px;
  margin: 10rpx auto;
}
.btn-addCar{
  flex: 3;
  color:#fff;
  background: orange;
  line-height: 120rpx;
  text-align: center;
  font-size: 14px;
}
.btn-buy{
  flex: 3;
  color:#fff;
  background: #ff2d4a;
  line-height: 120rpx;
  text-align: center;
  font-size: 14px;
}
.contact{
  width: 20%;
  height: 120rpx;
  z-index: 9;
  opacity: 0;
  position: absolute;
  left: 0;
  top: 0;
}