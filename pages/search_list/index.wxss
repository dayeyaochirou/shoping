/* pages/search_list/index.wxss */
.searchipt{
  width: 100%;
  height: 60rpx;
  padding: 39rpx 19rpx;
  background: #eee;
}
.searchipt .input{
  width: 710rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #fff;
  border: 1px solid #999;
  border-radius: 3px;
  vertical-align: center;
  font-size: 14px;
}
.nav{
  width: 100%;
  display: flex;
  justify-content: space-around;
  border-bottom: 1px solid #ddd;
}
.nav-item{
  height: 100rpx;
  width: 33.3%;
  line-height: 100rpx;
  text-align: center;
  font-size: 14px;
}
.pitch{
  background: rgb(248, 223, 233);
  color: red;
}
.details{
  padding: 10rpx;
  display: flex;
  justify-content:space-between;
  border-bottom: 1px solid #ddd;
}
.details image{
  width:200rpx;
  height: 200rpx;
  flex-shrink:0;
}
.details-right{
  flex: 1;
  display: flex;
  padding:10rpx;
  flex-direction: column;
  justify-content: space-between;
}
.details-right .goodsname{
  margin-left: 20rpx;
  font-size: 14px;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis; 
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goods_price_red{
  color: red;
}
.load-more{
  padding:20px;
  text-align: center;
  font-size:12px;
  color:#999;
}