/* pages/cart/index.wxss */
page, .car{
  height: 100%;
  background: #f1f1f1;
}
.gather{
  margin: 20rpx;
  font-size: 14px;
  color: #333;
}
.gather text{
  margin-left: 30rpx;
}
.people{
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  padding-right: 70rpx;
  position: relative;
}
.people::after{
  display: block;
  content: "";
  width: 20rpx;
  height: 20rpx;
  right:25rpx;
  top:35rpx;
  position: absolute;
  border-top: 2px solid #999;
  border-right: 2px solid #999;
  transform: rotate(45deg)
}
.address{
  padding: 20rpx 0;
}
.img{
  width: 100%;
  height:15rpx;
}
.shoping-title{
  width: 100%;
  height: 50rpx;
  padding: 30rpx;
  font-size: 14px;
  color: #333;
  background: #fff;
  border-bottom: 2px solid #ccc;
}
.car-list{
  display: flex;
  width: 100%;
  height: 200rpx;
  padding: 10rpx;
  box-sizing: border-box;
  justify-items: center;
  background: #fff;
  border-bottom: 1px solid #ccc;
}
.hook{
  flex:1;
  height: 180rpx;
  line-height: 180rpx;
}
.slogo{
  flex:3;
  width: 160rpx;
  height: 180rpx;
}
.details{
  flex:6;
  display: flex;
  margin-left: 20rpx;
  flex-direction: column;
  justify-content: space-between;
}
.goods-name{
  font-size: 14px;
  color: #666;
  display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp: 2;
overflow: hidden;
}
.details-bottom{
  display: flex;
  justify-content: space-between;
}
.goods-price{
  font-size: 12px;
  color: red;
}
.goods-price text{
  font-size: 16px;
}
.addition{
  display: flex;
}
.addition view{
  width: 50rpx;
  height: 50rpx;
  border-radius: 15rpx;
  border: 1px solid #666;
  background: #eee;
  text-align: center;
  line-height: 50rpx;
  margin: 0 20rpx;
}
.footer{
  position: fixed;
  width:100%;
  height: 100rpx;
  bottom:0;
  left:0;
  display: flex;
  font-size:14px;
  background:#fff;
}

 .footer-left{
  height:100%;
  padding-left:20rpx;
  display: flex;
  align-items: center;
}

 .footer-left icon{
  margin-right:20rpx;
}

 .footer-center{
  flex:1;
  margin:0 50rpx;
}

 .footer-center .colorRed{
  color:red;
}

 .footer-center .colorGray{
  font-size:12px;
  color: #999;
}

 .checkout{
  width:220rpx;
  background: #eb4451;
  height: 100%;
  text-align: center;
  line-height: 100rpx;
  color:#fff;
} 	